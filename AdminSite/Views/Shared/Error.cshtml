@model Exception

@{
    ViewBag.Title = "Error";
}
<link href="https://fonts.googleapis.com/css?family=Quicksand:700" rel="stylesheet">
<link href="~/css/Error/font-awesome.min.css" rel="stylesheet" />
<link href="~/css/Error/style.css" rel="stylesheet" />
@if (Model != null)
{
    <div id="notfound">
        <div class="notfound">
            <div class="notfound-bg">
                <div></div>
                <div></div>
                <div></div>
            </div>
            <h1>oops!</h1>
            <h2>
                Error 500 : @Model.Message 
                @if (Model.InnerException != null)
                {
                    <span>@Model.InnerException.Message</span>
                }
            </h2>
            <div class="text-danger d-block">
                Error 500 : @Model.Message
                <p>@Model.StackTrace</p>
                @if (Model.InnerException != null)
                {
                    <p>Inner:</p>
                    <p>@Model.InnerException.StackTrace</p>
                }
            </div>
            <a asp-action="Index" asp-controller="Home" class="cm-button-error">Go To Home Page</a>
        </div>
    </div>
}
else
{

    <div id="notfound">
        <div class="notfound">
            <div class="notfound-bg">
                <div></div>
                <div></div>
                <div></div>
            </div>
            <h1>oops!</h1>
            <h2>You don't have access to the site</h2>
            <a asp-action="SignIn" asp-controller="Account" class="cm-button-error">Please Login</a>
        </div>
    </div>
}
